<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.yxj.mylibrary.SwitchButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:select_background_color="@color/purple_200"
        app:background_color="@color/color_666666"
        app:text_selected_color="@color/white"
        app:item_width="45dp"
        app:item_height="24dp"
        app:item_padding="2dp"
        app:radius="12dp"
        app:text_size="10sp"
        app:menu_array="@array/menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>